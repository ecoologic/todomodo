- title_content "edit #{@user}"

-# note that the put request is sent even when the html says post
= form_for @user, :method => :put do |f|

  .field
    = f.label       :name, 'name'
    = f.text_field  :name

  .field
    = f.label      :about, 'about'
    = f.text_area  :about

  .field
    = f.label      :avatar, 'avatar'
    = f.file_field :avatar

  .field
    = f.label      :remote_avatar_url, 'avatar url'
    = f.text_field :remote_avatar_url

  .action
    = f.submit 'ok'

