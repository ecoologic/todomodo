-# tags in this partial are all ment to be fix-positioned in the page

#control-panel

  // user login/out
  - if current_user
    %div{:class => session[:has_just_auth] ? 'blink-once' : nil}
      %em= current_user
    = link_to 'logout', logout_path
  - else
    = link_to 'login', login_path
    = link_to 'signup', signup_path

  // user notes
  -# TODO: make an html5 button
  %br
  = link_to 'toggle user note', '#', :id => 'toggle-current-user-note'
